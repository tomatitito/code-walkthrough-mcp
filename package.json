{
  "name": "git-commit-video-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for generating video walkthroughs of git commits",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "git-commit-video": "./bin/git-commit-video"
  },
  "scripts": {
    "build": "tsc",
    "build:bin": "bun build src/cli.ts --compile --outfile bin/git-commit-video",
    "watch": "tsc --watch",
    "start": "node dist/src/index.js",
    "dev": "tsc && node dist/src/index.js"
  },
  "keywords": [
    "mcp",
    "git",
    "video",
    "walkthrough"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.12.2",
    "highlight.js": "^11.11.1",
    "puppeteer": "^24.22.3",
    "say": "^0.16.0",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
